<h1 class="delish">Add Deliciousness</h1>
	<div class="recipe-fields">
		<%= simple_form_for @recipe do |f| %>
			<%= f.input :title, label: false, input_html: { placeholder: "Title"} %>
			<%= f.input :description, label: false, input_html: { placeholder: "Description", :rows => 15 } %><br> 
			<%= f.submit "Create Recipe", :class => "btn btn-warning", id: 'create_recipe' %>
		<% end %>
	</div>




<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>




<%= debug params %> 


